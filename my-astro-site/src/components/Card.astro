---
interface Props {
  title?: string;
  icon?: string;
  color?: string;
  class?: string;
}

const {
  title,
  icon,
  color = 'aqua',
  class: className = ''
} = Astro.props;

const colorClasses = {
  aqua: 'from-aqua/10 to-aqua/5 border-aqua/20',
  teal: 'from-teal/10 to-teal/5 border-teal/20',
  blue: 'from-blue/10 to-blue/5 border-blue/20',
  orange: 'from-orange/10 to-orange/5 border-orange/20',
};
---

<div class={`bg-gradient-to-br ${colorClasses[color]} border rounded-3xl p-6 hover:shadow-soft transition-all duration-300 ${className}`}>
  {icon && (
    <div class="text-4xl mb-4">
      {icon}
    </div>
  )}
  {title && (
    <h3 class="font-display font-bold text-xl mb-3 text-navy">
      {title}
    </h3>
  )}
  <div class="font-body text-gray-700">
    <slot />
  </div>
</div>
