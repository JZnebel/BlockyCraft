---
const currentYear = new Date().getFullYear();

const footerLinks = {
  Product: [
    { href: '/#features', label: 'Features' },
    { href: '/#examples', label: 'Examples' },
    { href: '/docs', label: 'Documentation' },
    { href: '#download', label: 'Download' },
  ],
  Education: [
    { href: '/#teachers', label: 'For Teachers' },
    { href: '/#parents', label: 'For Parents' },
    { href: '/curriculum', label: 'Curriculum' },
    { href: '/blog', label: 'Blog' },
  ],
  Community: [
    { href: 'https://github.com/JZnebel/BlockyCraft', label: 'GitHub', external: true },
    { href: '/examples', label: 'Example Projects' },
  ],
  Legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
    { href: '/contact', label: 'Contact' },
  ],
};
---

<footer class="bg-navy text-white">
  <div class="container mx-auto px-4 max-w-7xl py-12">
    <!-- Top section -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-8">
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h3 class="font-display font-semibold text-sm uppercase tracking-wider text-aqua mb-4">
            {category}
          </h3>
          <ul class="space-y-2">
            {links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="font-body text-gray-300 hover:text-aqua transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Newsletter signup -->
    <div class="border-t border-gray-700 pt-8 mb-8">
      <div class="max-w-md">
        <h3 class="font-display font-semibold text-lg mb-2">
          Stay Updated
        </h3>
        <p class="font-body text-gray-300 text-sm mb-4">
          Get the latest updates, examples, and teaching resources.
        </p>
        <form class="flex gap-2">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 px-4 py-2 rounded-xl bg-navy-light border border-gray-600 focus:border-aqua focus:outline-none text-white"
          />
          <button
            type="submit"
            class="px-6 py-2 bg-gradient-to-r from-aqua to-teal text-navy font-display font-semibold rounded-xl hover:shadow-glow transition-all"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="border-t border-gray-700 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="flex items-center">
        <img
          src="/logo-small.png"
          alt="BlocklyCraft"
          class="h-14 w-auto brightness-200"
          width="175"
          height="84"
        />
      </div>

      <p class="font-body text-gray-400 text-sm">
        © {currentYear} BlocklyCraft. Built with ❤️ for curious minds.
      </p>

      <div class="flex gap-4">
        <a href="https://github.com/JZnebel/BlockyCraft" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-aqua transition-colors" aria-label="GitHub">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
