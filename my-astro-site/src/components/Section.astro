---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  background?: 'white' | 'gray' | 'gradient';
  class?: string;
}

const {
  id,
  title,
  subtitle,
  background = 'white',
  class: className = ''
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  gradient: 'bg-gradient-to-b from-blue/5 to-white',
};
---

<section id={id} class={`py-16 md:py-24 ${bgClasses[background]} ${className}`}>
  <div class="container mx-auto px-4 max-w-7xl">
    {(title || subtitle) && (
      <div class="text-center mb-12 md:mb-16">
        {title && (
          <h2 class="font-display font-bold text-3xl md:text-4xl lg:text-5xl text-navy mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="font-body text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
