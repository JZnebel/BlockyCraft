---
const navLinks = [
  { href: '/#features', label: 'Features' },
  { href: '/#examples', label: 'Examples' },
  { href: '/#teachers', label: 'For Teachers' },
  { href: '/voxel-generator', label: '3D Model Builder' },
  { href: '/docs', label: 'Docs' },
];
---

<nav class="fixed top-0 w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
        <img
          src="/logo-small.png"
          alt="BlocklyCraft Logo"
          class="h-16 w-auto"
          width="200"
          height="96"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="font-body text-navy hover:text-aqua transition-colors font-medium"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a
          href="#download"
          class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange to-orange-dark text-white font-display font-semibold rounded-2xl hover:shadow-lg hover:scale-105 transition-all duration-200"
        >
          Download Free
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-navy hover:text-aqua transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="block py-2 font-body text-navy hover:text-aqua transition-colors"
        >
          {link.label}
        </a>
      ))}
      <a
        href="#download"
        class="block mt-4 text-center px-6 py-3 bg-gradient-to-r from-orange to-orange-dark text-white font-display font-semibold rounded-2xl"
      >
        Download Free
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
